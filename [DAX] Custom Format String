VAR CurrentValue = SELECTEDMEASURE()
RETURN
IF(CurrentValue > 0,
    SWITCH (
        TRUE (),
        CurrentValue <= 1E3, "#,0.00",
        CurrentValue < 1E6, "#,0",
        CurrentValue < 1E9, "#,##0,,.00 Juta",
        CurrentValue < 1E12, "#,0,,,.00M",
        CurrentValue < 1E15, "#,0,,,,.00T"),
    SWITCH (
        TRUE (),
        CurrentValue >= -1E3, "#,0.00",
        CurrentValue > -1E6, "#,0",
        CurrentValue > -1E9, "#,##0,,.00 Juta",
        CurrentValue > -1E12, "#,0,,,.00M",
        CurrentValue > -1E15, "#,0,,,,.00T")
)
// For Percent with 2 decimals use "â–² 0.00%;â–¼ 0.00%"
